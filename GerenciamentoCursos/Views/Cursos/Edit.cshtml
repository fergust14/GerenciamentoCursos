@model GerenciamentoCursos.Models.ViewModels.CursoFormViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>
<h4>Curso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Curso.Id" />
            <div class="form-group">
                <label asp-for="Curso.Nome" class="control-label"></label>
                <input asp-for="Curso.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Curso.TipoCurso" class="control-label"></label>
                <select asp-for="Curso.TipoCurso" asp-items="@(new SelectList(Model.Tipos,"TipoCurso","TipoCurso"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}