@model IEnumerable<GerenciamentoCursos.Models.Tipo>

@{
    ViewData["Title"] = "Index";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">

    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.TipoCurso)</th>            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.TipoCurso)</td>
            <td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
            <td><a asp-action="Details" asp-route-id="@item.Id">Details</a></td>
            <td><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
        </tr>
        }
    </tbody>
</table>
<p><a asp-action="Create" class="btn btn-success">Create</a></p>
