@model GerenciamentoCursos.Models.ViewModels.LocalidadeFormViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>
<h4>Localidade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Localidade.Id" />
            <div class="form-group">
                <label asp-for="Localidade.Cidade" class="control-label"></label>
                <input asp-for="Localidade.Cidade" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Localidade.Estado" class="control-label"></label>
                <select asp-for="Localidade.Estado" asp-items="@Model.Estados" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}